
@model PI_Portal.Models.CARR

@{
    ViewBag.Title = "New Car Creation";
}

<h2>Create</h2>


    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>New CARR</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerLegalName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.CustomerLegalName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerLegalName, "", new { @class = "text-danger" })                    
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Get Started" class="btn btn-default bg-secondary" />
                </div>
            </div>
        </div>
    }

